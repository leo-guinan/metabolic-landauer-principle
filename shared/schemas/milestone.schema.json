{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://metaspn.org/schemas/milestone.schema.json",
  "title": "Milestone",
  "type": "object",
  "required": ["arm", "code", "label", "ts", "actor", "hash"],
  "properties": {
    "arm": {
      "type": "string",
      "enum": ["academic", "memetic"]
    },
    "code": {
      "type": "string",
      "description": "Short stable code (A1..A7 or M1..M6)"
    },
    "label": {
      "type": "string",
      "description": "Human-friendly title"
    },
    "ts": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 UTC timestamp"
    },
    "actor": {
      "type": "string",
      "description": "Who performed or attested this milestone"
    },
    "evidence_url": {
      "type": "string",
      "description": "Link to prereg/IRB/form/dataset/PR proving milestone"
    },
    "notes": {
      "type": "string"
    },
    "hash": {
      "type": "string",
      "description": "SHA256 of the attached artifact or concatenated evidence"
    },
    "meta": {
      "type": "object",
      "description": "Arm-specific key/values (e.g., n, reviewers, sites)"
    }
  }
}

